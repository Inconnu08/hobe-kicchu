<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/likeAmount"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="0dp"
            android:paddingTop="10dp">

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#BDBDBD"/>

            <ImageView
                android:id="@+id/img"
                android:layout_width="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/brand_logo"
                android:layout_alignParentStart="true"
                android:layout_height="47dp" />

            <TextView
                android:id="@+id/cardView_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="1dp"
                android:maxLines="1"
                android:text="Shamin Parvez"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/img"
                android:textSize="25sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black" />

            <RatingBar
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                style="@android:style/Widget.Material.RatingBar.Small"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                android:max="5"
                android:rating="10"
                android:layout_width="85dp"
                android:isIndicator="false"
                android:minHeight="0dp"
                android:nestedScrollingEnabled="true"
                android:minWidth="0dp"
                android:maxHeight="15dp"
                android:maxWidth="86dp"
                android:clickable="false"
                android:progressTint="@color/colorPrimary"
                android:layout_alignBottom="@+id/img"
                android:layout_alignStart="@+id/cardView_name" />

            <TextView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="100"
                android:text="Simply the best taste at a fairly cheap price!"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_below="@+id/ratingBar"
                android:layout_alignStart="@+id/ratingBar"
                android:paddingBottom="20dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>